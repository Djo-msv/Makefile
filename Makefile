CC = cc
FLAG = -Wall -Werror -Wextra
SRC =

# Couleurs pour le terminal
RED    = \033[1;31m
GREEN  = \033[1;32m
BLUE   = \033[1;34m
CYAN   = \033[36m
RESET  = \033[0m

define PROGRESS_BAR
	@echo -ne "$(GREEN)"
endef

all:
	@echo "$(CYAN)                   __                 ___      ___ "
	@echo "$(CYAN) /'\\_/\`\\          /\\ \\              /'___\\ __ /\\_ \\"
	@echo "$(CYAN)/\\      \\     __  \\ \\ \\/\'\\     __ /\\ \\__//\\_\\\\\\//\\ \\      __"
	@echo "$(CYAN)\\ \\ \\__\\ \\  /'__\`\\ \\ \\ ,  <   /'__\`\\ \\ ,__\\/\\ \\ \\ \\ \\   /'__\`\\ "
	@echo "$(CYAN) \\ \\ \\_/\\ \\/\\ \\L\\.\\_\\ \\ \\\\\\\`\\ /\\  __/\\ \\ \\_/\\ \\ \\ \\_\\ \\_/\\  __/ "
	@echo "$(CYAN)  \\ \\_\\\\\\ \\_\\ \\__/.\\_\\\\\\ \\_\\ \\_\\ \\____\\\\\\ \\_\\  \\ \\_\\/\\____\\ \\____\\"
	@echo "$(CYAN)   \\/_/ \\/_/\\/__/\\/_/ \\/_/\\/_/\\/____/ \\/_/   \\/_/\\/____/\\/____/"
